{
  "name": "gomoku-online",
  "version": "1.0.0",
  "description": "1対1五目並べオンラインゲーム",
  "main": "dist/index.js",
  "scripts": {
    "setup": "node -e \"process.exit(0)\" && npm i",
    "dev": "concurrently \"npm run server:dev\" \"npm run web:dev\"",
    "server:dev": "tsx server/index.ts",
    "web:dev": "npm --prefix webapp run dev -- --host",
    "build": "npm run server:build && npm run web:build",
    "server:build": "tsc",
    "web:build": "npm --prefix webapp run build",
    "start": "node dist/index.js",
    "start:pair": "concurrently -k -n WEB,API -c auto \"npm:web:dev\" \"npm:server:dev\"",
    "start:prod": "npm run web:build && node dist/server/index.js",
    "go": "cross-env DEV=1 tsx scripts/dev.ts",
    "invite": "tsx scripts/invite.ts",
    "oneclick": "bash scripts/oneclick.sh",
    "smoke": "tsx scripts/smoke-ws.ts",
    "test:e2e": "node -e \"process.exit(0)\" && npm run test:ws",
    "test:ws": "npm run test:double && npm run test:ttl && npm run test:rate && npm run test:order && npm run test:reconnect && npm run test:scheme && npm run test:basepath",
    "test:double": "tsx scripts/test-double-join.ts",
    "test:ttl": "cross-env TOKEN_TTL_MIN=1 tsx scripts/test-token-expire.ts",
    "test:rate": "tsx scripts/test-rate-limit.ts",
    "test:order": "tsx scripts/test-ordering.ts",
    "test:reconnect": "tsx scripts/test-reconnect.ts",
    "test:scheme": "npm run web:build && tsx scripts/test-scheme-staticcheck.ts",
    "test:basepath": "cross-env BASE_PATH=/app tsx scripts/test-basepath.ts",
    "test:tunnel": "tsx scripts/test-tunnel.ts",
    "test:mobile": "tsx scripts/test-mobile-friendly.ts",
    "test:reconnect:mobile": "tsx scripts/test-reconnect-mobile.ts",
    "test:rate-order": "tsx scripts/test-rate-order.ts",
    "test:ws-scheme": "tsx scripts/test-ws-scheme.ts",
    "test:all:e2e": "npm run test:mobile && npm run test:reconnect:mobile && npm run test:rate-order && npm run test:ws-scheme && npm run test:basepath",
    "tunnel": "tsx scripts/tunnel.ts",
    "test": "vitest",
    "lint": "eslint server/**/*.ts",
    "lint:fix": "eslint server/**/*.ts --fix",
    "format": "prettier --write server/**/*.ts webapp/**/*.{ts,tsx,css,html}"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/websocket": "^8.3.1",
    "@fastify/static": "^6.12.0",
    "open": "^10.0.2",
    "undici": "^6.2.1",
    "picocolors": "^1.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "tsx": "^4.6.2",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "vitest": "^1.0.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "pino-pretty": "^10.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
